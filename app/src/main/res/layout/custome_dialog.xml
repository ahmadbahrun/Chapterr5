<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/tv_hasil_permainan"
            android:text="HASIL PERMAINAN"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_width="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="100dp"/>
        <View
            android:id="@+id/v_untuk_hasil"
            android:layout_marginTop="12dp"
            app:layout_constraintRight_toRightOf="@id/tv_hasil_permainan"
            app:layout_constraintLeft_toLeftOf="@id/tv_hasil_permainan"
            app:layout_constraintBottom_toTopOf="@id/bt_play_again"
            app:layout_constraintTop_toTopOf="@id/tv_hasil_permainan"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/bt_play_again"
            app:layout_constraintTop_toBottomOf="@id/tv_hasil_permainan"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="250dp"
            android:text="Play Again"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/bt_navigate_menu"
            app:layout_constraintTop_toBottomOf="@id/bt_play_again"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="250dp"
            android:text="Back To Menu"
            android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>